<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <security>
            <module>
                <type>1</type>
            </module>
            <general>
                <enabled>1</enabled>
            </general>
            <brute_force>
                <enabled>1</enabled>
                <failed_count>5</failed_count>
                <failed_time>10</failed_time>
                <lock_user>1</lock_user>
                <email_template>security_brute_force_email_template</email_template>
            </brute_force>
        </security>
    </default>
</config>